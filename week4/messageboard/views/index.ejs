<% layout( 'base' ) -%>

<div class="row">
    <div class="col">
        <h1 class="text-center"><%= title %></h1>
        <hr>       
        <form action="/post" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label for="name">Post:</label>
                <input type="text" class="form-control" name="post">
            </div>
            <input type="submit" class="btn btn-primary btn-block" value"Post Message">
        </form> 
    </div>
</div>
<% if (posts.length) { %>
<div class="row">
    <div class="col">
        <% for ( let post of posts ) { %>
            <p>Name: <%= post.name %></p>
            <p>Post: <%= post.post %></p>
            <% if (post.comments.length) { %>
            <div class="pl-5 ml-5">
                <% for (let comment of post.comments) { %>
                <p>Name: <%= comment.name %></p>
                <p>Message: <%= comment.comment %></p>
                <% } %>
             </div>
             <% } %>
                <form action="/comment/<%= post.id %>" method="post" class="pl-5 ml-5" name="<%= post.id %>">
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label for="name">Comment:</label>
                        <input type="text" class="form-control" name="comment">
                    </div>
                    <input type="submit" class="btn btn-success btn-block" value"Post comment">                
                </form>
             <hr>
        <% } %>
    </div>
</div>
<% } %>

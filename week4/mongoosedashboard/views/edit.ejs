<% layout( 'base' ) -%>

<div class="row">
    <div class="col"></div>
    <div class="col-8">
        <h1><%= title %></h1>
        <form action="/wolves/<%= wolf.id %>" method="post">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name" value="<%= wolf.name %>">
            </div>
            <div class="form-group">
                <label for="color">Color:</label>
                <input type="text" class="form-control" name="color" value="<%= wolf.color %>">
            </div>
            <input type="submit" class="btn btn-primary btn-lg" value="Edit Wolf">
            <a class="btn btn-success btn-lg float-right" href="/">Home</a>
    </div>
    <div class="col"></div>
</div>
